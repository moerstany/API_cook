
@{
    ViewData["Title"] = "Search";
}

@model Root
@if (@ViewBag.CookTitle != null)
{
    <h1>Найденные рецепты : @ViewBag.CookTitle</h1>
    <div class="row">
		@foreach (var item in @Model.Results)
		{
			<div class="card col-4">
				<img src="@item.ThumbnailUrl" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">@item.Name</h5>
					<p class="card-text">@item.Instructions</p>
					<a asp-action="Movie" asp-controller="Home" asp-route-id="@item.VideoUrl"    class="btn btn-primary">смотреть видео</a>
				</div>
			</div>
		}

	</div>
    
}
else
{
    <h1> Ничего не нашлось </h1>
}